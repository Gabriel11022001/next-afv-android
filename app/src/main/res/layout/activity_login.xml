<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity" >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fundo_tela_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/principal_50_porcento_transparencia" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:background="@drawable/fundo_container_login"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:elevation="4dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_label_email"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txt_hint_email_usuario"
                android:textColorHint="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_usuario_branco"
                android:drawablePadding="10dp"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:elevation="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_label_senha"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="40dp" />

            <EditText
                android:id="@+id/edt_senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txt_hint_senha_usuario"
                android:textColorHint="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_senha_usuario"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:inputType="numberPassword" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:elevation="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_entrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estilo_btn_borda_branca_fundo_transparente"
                android:text="@string/txt_btn_entrar"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="15dp"
                android:textAllCaps="true"
                android:elevation="4dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>