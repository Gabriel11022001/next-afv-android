<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@android:color/holo_red_dark" >

    <ImageView
        android:id="@+id/icone_alerta_erro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_mensagem_alerta"
        android:src="@drawable/ic_notificacao_chave_acesso"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/txt_mensagem_alerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensagem do alerta"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/icone_alerta_erro"
        app:layout_constraintTop_toTopOf="@id/icone_alerta_erro"
        app:layout_constraintBottom_toBottomOf="@id/icone_alerta_erro"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icone_alerta_erro"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:text="OK"
        android:textColor="@android:color/holo_red_dark"
        android:background="@color/white"
        android:textSize="20sp"
        android:elevation="4dp"
        android:textStyle="bold|italic" />

</androidx.constraintlayout.widget.ConstraintLayout>