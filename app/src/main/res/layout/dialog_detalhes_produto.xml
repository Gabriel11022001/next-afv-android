<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cinza_fundo_telas"
    android:paddingBottom="20dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_topo_dialog_detalhes_produto"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="3dp"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalhes do produto"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/btn_fechar_dialog_detalhes_produto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_fechar"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_topo_dialog_detalhes_produto"
        android:padding="10dp" >

        <!-- foto do produto -->
        <ImageView
            android:id="@+id/img_produto"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:elevation="3dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/img_sem_foto" />

        <!-- nome do produto -->
        <TextView
            android:id="@+id/txt_lb_nome_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produto:"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/principal" />

        <TextView
            android:id="@+id/txt_nome_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do produto cadastrado na base de dados"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cinza_separador_linhas"
            android:layout_marginTop="10dp" />

        <!-- código do produto -->
        <TextView
            android:id="@+id/txt_lb_codigo_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código do produto:"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/principal"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txt_codigo_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cinza_separador_linhas"
            android:layout_marginTop="10dp" />

        <!-- preço de venda do produto -->
        <TextView
            android:id="@+id/txt_lb_preco_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço de venda:"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/principal"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txt_preco_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$0.00"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cinza_separador_linhas"
            android:layout_marginTop="10dp" />

        <!-- preço de compra do produto -->
        <TextView
            android:id="@+id/txt_lb_preco_compra_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço de compra:"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/principal"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txt_preco_compra_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$0.00"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cinza_separador_linhas"
            android:layout_marginTop="10dp" />

        <!-- unidades em estoque do produto -->
        <TextView
            android:id="@+id/txt_lb_unidades_estoque_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unidades em estoque:"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/principal"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txt_unidades_estoque_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 unidades"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cinza_separador_linhas"
            android:layout_marginTop="10dp" />

        <!-- status do produto -->
        <TextView
            android:id="@+id/txt_lb_status_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/principal"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txt_status_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ativo"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cinza_separador_linhas"
            android:layout_marginTop="10dp" />

        <!-- código de barras do produto -->
        <TextView
            android:id="@+id/txt_lb_codigo_barras_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código de barras:"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/principal"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txt_codigo_barras_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567677"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>