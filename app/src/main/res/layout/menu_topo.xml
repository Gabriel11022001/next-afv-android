<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    android:padding="20dp"
    android:background="@drawable/fundo_gradient" >

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAllCaps="true" />

    <ImageButton
        android:id="@+id/btn_retornar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_seta_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/estilo_btn_menu"
        android:padding="10dp"
        android:elevation="4dp" />

    <ImageButton
        android:id="@+id/btn_adicionar_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_adicionar_menu"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_filtro_menu"
        android:layout_marginEnd="10dp"
        android:background="@drawable/estilo_btn_menu"
        android:padding="10dp"
        android:elevation="4dp"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:id="@+id/btn_filtro_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_filtro_menu"
        app:layout_constraintStart_toEndOf="@id/btn_adicionar_menu"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/estilo_btn_menu"
        android:padding="10dp"
        android:elevation="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>