<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@drawable/estilo_adapter_padrao"
    android:elevation="4dp" >

    <ImageView
        android:id="@+id/img_produto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_sem_foto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_nome_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img_produto"
        app:layout_constraintTop_toTopOf="@id/img_produto"
        android:text="Coca cola de 2 litros"
        android:textColor="@color/principal"
        android:textAllCaps="true"
        android:textStyle="bold|italic"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_codigo_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/txt_nome_produto"
        app:layout_constraintTop_toBottomOf="@id/txt_nome_produto"
        android:text="CÃ³digo: 123456"
        android:textColor="@color/secundaria"
        android:textStyle="bold|italic"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/txt_preco_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/txt_codigo_produto"
        app:layout_constraintTop_toBottomOf="@id/txt_codigo_produto"
        android:text="R$100.00"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_proximo_adapter" />

</androidx.constraintlayout.widget.ConstraintLayout>